                                        </Label>
                                        <Label text="Achternaam">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Label text="Wachtwoord">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Label text="Rol">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Label prefHeight="26.0" prefWidth="124.0" text="Gebruikersnaam" visible="false">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Label text="GebruikersID" visible="false">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox maxHeight="235.0" minHeight="235.0" prefHeight="235.0" prefWidth="315.0" spacing="13.0">
