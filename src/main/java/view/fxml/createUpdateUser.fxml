                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                                </Button>
                                <Button fx:id="GebruikerslijstButton" mnemonicParsing="false" onAction="#doGebruikerslijst" style="-fx-border-color: #154360; -fx-background-color: #154360;" text="Gebruikerslijst" textFill="WHITE">
